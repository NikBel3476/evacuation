{
  "name": "evacuation",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "Evacuation - программа моделирования движения людей в здании.",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:wdio": "wdio run ./wdio.conf.ts",
    "coverage": "vitest run --coverage",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "tauri": "tauri",
    "clean": "rescript clean -with-deps",
    "format:write:js": "prettier --write .",
    "format:check:all": "npm run format:check:js && npm run format:check:rust",
    "format:check:js": "prettier --check .",
    "format:check:rescript": "rescript format -check -all",
    "format:check:rust": "cargo fmt --manifest-path src-tauri/Cargo.toml --check",
    "lint:all": "npm run lint:js && npm run lint:rust && npm run lint:css",
    "lint:js": "npx eslint .",
    "lint:css": "npx stylelint \"**/*.css\"",
    "lint:rust": "cargo clippy -- -D warnings",
    "prepare": "husky install",
    "start-server": "http-server ./dist -p 8080",
    "cypress:test:ci": "start-server-and-test start-server http://localhost:8080 cypress:run"
  },
  "lint-staged": {
    "!(*.bs).{js, jsx}": [
      "prettier --write"
    ],
    "!(*.gen).{ts, tsx}": [
      "prettier --write"
    ],
    "*.rs": [
      "rustfmt"
    ],
    "*.res": [
      "rescript format"
    ]
  },
  "devDependencies": {
    "@jihchi/vite-plugin-rescript": "^5.3.0",
    "@rescript/react": "^0.11.0",
    "@tauri-apps/cli": "^1.4.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-c8": "^0.33.0",
    "@wdio/cli": "^8.13.12",
    "@wdio/local-runner": "^8.13.12",
    "@wdio/mocha-framework": "^8.12.1",
    "@wdio/spec-reporter": "^8.12.2",
    "autoprefixer": "^10.4.14",
    "cypress": "^12.17.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gentype": "^4.5.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "rescript": "^10.1.4",
    "start-server-and-test": "^2.0.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "typescript-plugin-css-modules": "^5.0.1",
    "vite": "^4.4.6",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@pixi/react": "^7.1.0",
    "@reduxjs/toolkit": "^1.9.5",
    "@ryyppy/rescript-promise": "^2.1.0",
    "@tauri-apps/api": "^1.4.0",
    "classnames": "^2.3.2",
    "konva": "^9.2.0",
    "pixi.js": "^7.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-konva": "^18.2.10",
    "react-redux": "^8.1.1",
    "react-router-dom": "^6.14.2",
    "rescript-webapi": "^0.8.0"
  }
}
