{
    "name": "evacuation",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "license": "MIT",
    "description": "Evacuation - программа моделирования движения людей в здании.",
    "scripts": {
        "dev": "concurrently \"npm run dev:*\"",
        "dev:vite": "vite",
        "dev:rescript": "rescript build -w",
        "build": "rescript && tsc && vite build",
        "preview": "vite preview",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "cypress:run": "cypress run",
        "cypress:open": "cypress open",
        "tauri": "tauri",
        "clean": "rescript clean -with-deps",
        "format:write": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "npx eslint .",
        "lint:css": "npx stylelint \"**/*.css\"",
        "prepare": "husky install",
        "start-server": "http-server ./dist -p 8080",
        "cypress:test:ci": "start-server-and-test start-server http://localhost:8080 cypress:run"
    },
    "lint-staged": {
        "!(*.bs).js": [
            "prettier --write"
        ],
        "!(*.gen).ts": [
            "prettier --write"
        ],
        "*.jsx": [
            "prettier --write"
        ],
        "!(*.gen).tsx": [
            "prettier --write"
        ],
        "*.rs": [
            "rustfmt"
        ]
    },
    "devDependencies": {
        "@rescript/react": "^0.11.0",
        "@tauri-apps/cli": "^1.2.3",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "^18.13.0",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@vitejs/plugin-react": "^3.1.0",
        "@vitest/coverage-c8": "^0.28.4",
        "autoprefixer": "^10.4.13",
        "concurrently": "^7.6.0",
        "cypress": "^12.5.1",
        "eslint": "^8.33.0",
        "eslint-config-standard-with-typescript": "^34.0.0",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.6.1",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "gentype": "^4.5.0",
        "http-server": "^14.1.1",
        "husky": "^8.0.3",
        "jsdom": "^21.1.0",
        "lint-staged": "^13.1.1",
        "postcss": "^8.4.20",
        "prettier": "^2.8.4",
        "rescript": "^10.1.2",
        "start-server-and-test": "^1.15.3",
        "stylelint": "^14.16.1",
        "stylelint-config-standard": "^29.0.0",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.9.5",
        "typescript-plugin-css-modules": "^4.1.1",
        "vite": "^4.0.3",
        "vitest": "^0.28.4"
    },
    "dependencies": {
        "@ryyppy/rescript-promise": "^2.1.0",
        "@tauri-apps/api": "^1.2.0",
        "konva": "^8.4.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-konva": "^18.2.4",
        "react-router-dom": "^6.8.1",
        "rescript-webapi": "^0.7.0"
    }
}
